{
    "apps": [
        {
            "name": "lyceum-backend",
            "script": "./server/server.js",
            "instances": 1,
            "exec_mode": "fork",
            "env": {
                "NODE_ENV": "production"
            },
            "error_file": "./logs/err.log",
            "out_file": "./logs/out.log",
            "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
            "merge_logs": true,
            "autorestart": true,
            "max_restarts": 10,
            "min_uptime": "10s"
        }
    ]
}